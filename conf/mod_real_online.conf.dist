# Jazyk hlášek pro real-online a navázané odměny (CZ/EN)
# cs/en
RealOnline.Locale = cs

# Zobrazit level za jménem "Jmeno [lvl 80]"
RealOnline.ShowLevel = 1

# Skrýt GM postavy (1 = skrýt, 0 = zobrazit)
RealOnline.HideGMs = 0

# Minimální level pro zobrazení (0 = neomezovat)
RealOnline.MinLevel = 0

# Počet položek na stránku (.online, číslo = stránka)
RealOnline.PageSize = 10

# Rozsahy účtů, které se mají ignorovat ve výpisu (pro režim 'accountid')
# Formát: "min-max;min-max;..." (např. rozsahy účtů PlayerBots)
RealOnline.IgnoreAccountIdRanges = ""

# REŽIM ZJIŠŤOVÁNÍ ONLINE HRÁČŮ
#  - accountid (výchozí) -> původní chování, filtruje podle AccountID ranges
#  - session             -> pouze hráči s WorldSession (reální hráči)
RealOnline.Mode = session

# ==== Reward za real-online ====
RealOnline.Reward.Enable = 1
RealOnline.Reward.ItemId = 37711
# "minute" nebo "hour"
RealOnline.Reward.IntervalUnit = hour
# každých N jednotek
RealOnline.Reward.IntervalCount = 1
# minimální level hráče pro nárok (0 = neomezovat)
RealOnline.Reward.MinLevel = 0

